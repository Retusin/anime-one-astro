---
export interface Props {
	item: MangaParams
}

const item = Astro.props

import {Image} from '@astrojs/image/components';
import type { MangaParams } from 'src/types/manga.types';
---
 
 <li class="bg-[#004643] rounded-xl">
  <div class="p-4 flex gap-10">
		<Image src={item.item.attributes.posterImage.medium} width={170} height={250} alt="logo" class='rounded-xl' />
				<div>
					<h2 class='mb-2 text-2xl font-semibold'>{item.item.attributes.titles.en_jp}</h2>
						<span class='text-[#e16162]'>{item.item.attributes.titles.ja_jp}</span>
						 <div class='mb-2 mt-2 flex items-center gap-3'>
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#f9bc60" class="w-6 h-6">
  							<path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
							</svg>
						<span class="font-semibold">{item.item.attributes.averageRating}</span>	
				</div>
					<p class="line-clamp-4 mb-2 text-lg text-[#abd1c6]">{item.item.attributes.synopsis}</p>
			</div>
	</div>
</li>