---
import type { AnimeParams } from "src/types/anime.types";
import Button from "@components/ui/Button.astro";
import AnimeCard from "@components/ui/card/AnimeCard.astro";
const response = await fetch('https://kitsu.io/api/edge/trending/anime')
const trendingAnime = await response.json()
---

<section>
  <div>
    <h2 class="text-center text-3xl font-semibold text-[#001e1d] mb-16 mt-24">Best Anime</h2>
      <ul class="grid grid-cols-2 gap-10">
        {trendingAnime.data.map((item: AnimeParams) => 
          <AnimeCard item={item} />
					)}
      </ul>
			<Button title="Show All" classButton='mx-auto mt-12 mb-10 py-4 px-6 w-full max-w-[max-content] flex items-center' link='/anime' />
  </div>
</section>